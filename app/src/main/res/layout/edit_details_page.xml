<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar4"
        android:layout_width="382dp"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="587dp"
        android:background="#6D6875"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_image_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="Delete"
        app:cornerRadius="4dp"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="151dp" />

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="223dp"
        android:layout_height="175dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="86dp"
        tools:srcCompat="@drawable/muskcateer" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="322dp"
        android:text="@string/person"
        android:textColor="#391E22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="256dp"
        android:text="@string/location"
        android:textColor="#391E22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/apply_changes_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="166dp"
        android:backgroundTint="@color/button_color"
        android:text="@string/ok"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/person_tag_input"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="16dp"
        android:background="#E6D1D8"
        android:backgroundTint="#E6D1D8"
        android:ems="10"
        android:inputType="text"
        android:text="@string/type_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476" />

    <EditText
        android:id="@+id/location_tag_input"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="243dp"
        android:background="#E6D1D8"
        android:backgroundTint="#E6D1D8"
        android:ems="10"
        android:inputType="text"
        android:text="@string/type_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="382dp"
        android:layout_height="28dp"
        android:text="@string/edit_tag"
        android:textAlignment="center"
        android:textColor="#7e9680"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>